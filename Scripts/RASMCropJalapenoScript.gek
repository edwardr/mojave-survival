scn RASMCropJalapenoScript

int State


begin onActivate
	if State == 0 && GetActionRef == player
		player.additem JalapenoPepper 2
		set State to 1
		playGroup Forward 1
		setdestroyed 1
	endif
end

begin onLoad
	if State == 0
		playGroup Backward 1
	elseif State == 1
		playGroup Forward 1		
	endif
end

