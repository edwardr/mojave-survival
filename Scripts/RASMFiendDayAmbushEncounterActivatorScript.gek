scn RASMFiendDayAmbushEncounterActivatorScript

; this script handles random Fiend attacks > level 10 during the day.

int spawnCount
int spawnCountAlt
int lastSpawnDay

begin OnTriggerEnter player
	
	if playerREF.getLevel < 15
		return
	endif

	if lastSpawnDay == getGameDaysPassed
		return
	endif
	
	if GetIsReference RASMFiendDayAmbushEncounterActivatorREF1 == 1
		set lastSpawnDay to getGameDaysPassed
		set spawnCount to Rand 1, 3
		set spawnCountAlt to Rand 1, 3
		RASMFiendDayAmbushEncounterSpawnActivatorREF1.placeAtMe RASMFiendAmbushGunMaleA spawnCount
		RASMFiendDayAmbushEncounterSpawnActivatorREF1.placeAtMe RASMFiendAmbushMeleeMaleA spawnCountAlt
		RASMFiendDayAmbushEncounterSpawnActivatorREF1.placeAtMe RASMFiendAmbushMeleeFemaleA spawnCountAlt

		if getRandomPercent < 50
			RASMFiendDayAmbushEncounterActivatorREF1.disable
		endif
	elseif GetIsReference RASMFiendDayAmbushEncounterActivatorREF2 == 1
		set lastSpawnDay to getGameDaysPassed
		set spawnCount to Rand 1, 3
		set spawnCountAlt to Rand 1, 2
